<p id="notice"><%= notice %></p>

<h1>Listing Vendors</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vendors.each do |vendor| %>
      <tr>
        <td><%= vendor.name %></td>
        <td><%= vendor.description %></td>
        <td><%= link_to 'Show', vendor %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if can? :create, Vendor %>
  <%= link_to 'New Vendor', new_vendor_path %>
<% end %>
